<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Semi-transparent background color -->
    <!-- You can adjust the first two characters (the alpha) from 00 (transparent) to FF (opaque) -->
    <solid android:color="#40FFFFFF" /> <!-- This is a 25% transparent white -->

    <!-- A light border to give it a "glass edge" -->
    <stroke
        android:width="1dp"
        android:color="#B3070000" /> <!-- A 70% transparent white -->

    <!-- Rounded corners -->
    <corners android:radius="100dp" />

</shape>
