<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TallyCat">

        <service
            android:name=".ReminderService"
            android:enabled="true"
            android:exported="false" />

        <activity
            android:name=".ItemProfileActivity"
            android:exported="false" />
        <activity
            android:name=".SearchActivity"
            android:exported="false" /> <!-- Make LOGIN the launcher so both buttons work -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Create account screen -->
        <activity android:name=".CreateAccountActivity" /> <!-- Post-login destinations -->
        <activity android:name=".UserActivity" />
        <activity android:name=".AdminActivity" /> <!-- Admin ops -->
        <activity android:name=".AddInv" />
        <activity android:name=".EditInv" />
        <activity android:name=".DeleteInv" />
        <activity
            android:name=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".DashboardActivity"
            android:exported="false" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>