<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@drawable/notification_background">

    <!-- Icon -->
    <ImageView
        android:id="@+id/notification_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/catlogo" />

    <!-- Content -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/notification_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Item Checkout Reminder"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/notification_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="It's time to return a checked out item!"
            android:textColor="@color/gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/notification_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="8 hours ago"
            android:textSize="12sp"
            android:textColor="@color/light_gray"
            android:layout_marginTop="8dp" />

    </LinearLayout>

    <!-- Action Button -->
    <Button
        android:id="@+id/notification_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/glass_bubble_selected"
        android:backgroundTint="@color/primary"
        android:paddingStart="12dp"
        android:paddingTop="8dp"
        android:paddingEnd="12dp"
        android:paddingBottom="8dp"
        android:text="VIEW"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="12sp" />

</LinearLayout>